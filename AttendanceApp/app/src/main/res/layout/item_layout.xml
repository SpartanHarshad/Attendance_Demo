<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sign_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/sign_in"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sign_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_12"
            app:layout_constraintStart_toEndOf="@id/tv_sign_time"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sign_out_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/sign_out"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sign_out_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_12"
            app:layout_constraintStart_toEndOf="@id/tv_sign_out_time"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_time" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_out_time" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>